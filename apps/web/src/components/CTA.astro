---
interface Props {
  title: string;
  description?: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  title,
  description,
  ctaText = 'Hemen Ba≈üla',
  ctaHref = '/register',
} = Astro.props;
---

<section class="section">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="relative rounded-4xl overflow-hidden">
      <!-- Background -->
      <div class="absolute inset-0 bg-cta-pattern"></div>
      <div class="absolute inset-0 bg-black/10"></div>

      <!-- Decorative -->
      <div class="absolute -top-24 -right-24 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>

      <!-- Content -->
      <div class="relative z-10 py-16 md:py-24 px-8 md:px-16 text-center">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4 text-balance">
          {title}
        </h2>

        {description && (
          <p class="text-lg md:text-xl text-white/80 mb-8 max-w-2xl mx-auto">
            {description}
          </p>
        )}

        <a
          href={ctaHref}
          class="btn bg-white text-primary-600 hover:bg-gray-100 px-8 py-4 text-lg shadow-xl"
        >
          {ctaText}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

