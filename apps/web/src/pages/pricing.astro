---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTA from '../components/CTA.astro';

const plans = [
  {
    name: 'Başlangıç',
    price: 99,
    description: 'Küçük işletmeler için ideal başlangıç paketi.',
    features: [
      '5 kullanıcı',
      '10 GB depolama',
      'Temel analitik',
      'E-posta desteği',
      '5 entegrasyon',
    ],
    cta: 'Başla',
    popular: false,
  },
  {
    name: 'Profesyonel',
    price: 249,
    description: 'Büyüyen işletmeler için güçlü özellikler.',
    features: [
      '25 kullanıcı',
      '100 GB depolama',
      'Gelişmiş analitik',
      'Öncelikli destek',
      'Sınırsız entegrasyon',
      'API erişimi',
      'Özel raporlama',
    ],
    cta: 'Başla',
    popular: true,
  },
  {
    name: 'Kurumsal',
    price: null,
    description: 'Büyük organizasyonlar için özel çözümler.',
    features: [
      'Sınırsız kullanıcı',
      'Sınırsız depolama',
      'Özel analitik dashboard',
      '7/24 VIP destek',
      'Tüm entegrasyonlar',
      'Özel API erişimi',
      'SLA garantisi',
      'Dedicated manager',
    ],
    cta: 'İletişime Geç',
    popular: false,
  },
];

const faqs = [
  {
    question: 'Ücretsiz deneme süresi var mı?',
    answer: 'Evet, tüm planlarımızda 14 gün ücretsiz deneme süresi bulunmaktadır. Kredi kartı gerekmez.',
  },
  {
    question: 'Plan değişikliği yapabilir miyim?',
    answer: 'Evet, istediğiniz zaman planınızı yükseltebilir veya düşürebilirsiniz. Değişiklikler bir sonraki fatura döneminde geçerli olur.',
  },
  {
    question: 'İptal politikanız nedir?',
    answer: 'İstediğiniz zaman iptal edebilirsiniz. Aylık planlarda o ayın sonuna kadar, yıllık planlarda ise kalan süre için oransal iade yapılır.',
  },
  {
    question: 'Hangi ödeme yöntemlerini kabul ediyorsunuz?',
    answer: 'Kredi kartı, banka kartı ve banka havalesi ile ödeme yapabilirsiniz.',
  },
];
---

<BaseLayout title="Fiyatlandırma - NX Web">
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        Basit ve <span class="gradient-text">Şeffaf</span> Fiyatlandırma
      </h1>
      <p class="text-lg md:text-xl text-gray-600">
        İşletmenizin büyüklüğüne uygun planı seçin. Gizli ücret yok.
      </p>
    </div>
  </section>

  <!-- Pricing Cards -->
  <section class="section -mt-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-8">
        {plans.map((plan) => (
          <div
            class:list={[
              'card p-8 relative',
              plan.popular && 'ring-2 ring-primary-500 scale-105',
            ]}
          >
            {plan.popular && (
              <div class="absolute -top-4 left-1/2 -translate-x-1/2">
                <span class="bg-gradient-to-r from-primary-500 to-secondary-500 text-white text-sm font-medium px-4 py-1 rounded-full">
                  En Popüler
                </span>
              </div>
            )}

            <div class="text-center mb-6">
              <h3 class="text-xl font-bold mb-2">{plan.name}</h3>
              <p class="text-gray-600 text-sm mb-4">{plan.description}</p>
              <div class="text-4xl font-bold">
                {plan.price ? (
                  <>
                    <span class="text-lg align-top">₺</span>
                    {plan.price}
                    <span class="text-lg text-gray-500 font-normal">/ay</span>
                  </>
                ) : (
                  <span>Özel Fiyat</span>
                )}
              </div>
            </div>

            <ul class="space-y-3 mb-8">
              {plan.features.map((feature) => (
                <li class="flex items-center text-gray-600">
                  <svg class="w-5 h-5 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>

            <a
              href={plan.price ? '/register' : '/contact'}
              class:list={[
                'btn w-full justify-center',
                plan.popular ? 'btn-primary' : 'btn-secondary',
              ]}
            >
              {plan.cta}
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="section bg-gray-50">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Sıkça Sorulan Sorular</h2>
        <p class="text-lg text-gray-600">Fiyatlandırma hakkında merak ettikleriniz.</p>
      </div>

      <div class="space-y-4">
        {faqs.map((faq) => (
          <div class="card p-6">
            <h3 class="font-semibold mb-2">{faq.question}</h3>
            <p class="text-gray-600">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CTA
    title="Hangi plan size uygun?"
    description="Ekibimizle konuşun, işletmenize en uygun planı birlikte belirleyelim."
    ctaText="Demo Talep Et"
    ctaHref="/contact"
  />
</BaseLayout>

